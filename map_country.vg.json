{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1700,
  "height": 900,
  "projection": {"type": "equalEarth"},
  "layer": [
    {

      "data": {
        "url": "ne_50m_ocean.json",  
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#87CEEB"}
    },
    {
      "data": {
        "url": "ne_50m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "#313132"}
    },
    {
      "data": {
        "url": "ne_50m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "cleaned_annual_income.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["income"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "income",
          "type": "quantitative",
          "title": "Average Income (USD)",
          "scale": {
            "type": "threshold",
            "domain": [1000, 10000, 30000, 60000, 120000, 180000],
            "range": ["#ffcccc", "#ff9999", "#ff6666", "#ff3333", "#cc0000", "#660000"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "income", "type": "quantitative", "title": "Income annually","format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "darkgrey", "fill":null}
    }
  ]
}